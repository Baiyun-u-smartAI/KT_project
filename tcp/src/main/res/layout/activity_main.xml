<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="12"
            app:layout_constraintBottom_toTopOf="@id/发送内容"
            app:layout_constraintTop_toBottomOf="@id/服务器开关"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/冒号"

            android:id="@+id/IP地址"
            android:hint="IP address"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="40"
            app:layout_constraintBottom_toTopOf="@id/发送按钮"
            app:layout_constraintTop_toBottomOf="@id/IP地址"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:id="@+id/发送内容"
            android:hint="message"
    />
    <Button
            android:text="send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/发送内容"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="发送按钮点击函数"
            android:id="@+id/发送按钮"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/本地IP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/发送按钮"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            tools:text="本地IP：0.0.0.0"/>
    <Switch
            android:text="服务器开关"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="启动服务器"
            app:layout_constraintBottom_toTopOf="@id/IP地址"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/服务器开关"/>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/发送内容"
            app:layout_constraintTop_toBottomOf="@id/服务器开关"
            app:layout_constraintLeft_toRightOf="@+id/IP地址"
            app:layout_constraintRight_toLeftOf="@id/端口"
            android:id="@+id/冒号"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            app:layout_constraintBottom_toTopOf="@id/发送内容"
            app:layout_constraintTop_toBottomOf="@id/服务器开关"
            app:layout_constraintLeft_toRightOf="@+id/冒号"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/端口"
            android:hint="port(9700)"/>

</android.support.constraint.ConstraintLayout>